@model FormGenerator.Models.LoginViewModel

@{

    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@Styles.Render("~/Content/css/css.css")

@Styles.Render("~/Content/lib/bootstrap/dist/css/bootstrap.min.css")

<div class="test">
    <div class="registration-form">

        @using (Html.BeginForm())
        {

        <h2>Login</h2>
        <div class="col-md-12 form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>

        <div class="col-md-12 form-group">
            @Html.LabelFor(m => m.Password, new { @class = "label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        <center>
            <input type="submit" value="Login" class="create-account" />


        </center>
        }

    </div>
</div>@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}