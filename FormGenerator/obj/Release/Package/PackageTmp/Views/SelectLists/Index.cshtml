@model IEnumerable<FormGenerator.Models.SelectList>

@{
    ViewData["Title"] = "Index";
}



<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td style="width:70%">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                 

                    <td style="width:30%">

                        <apan type="button" class="collapsible">
                            <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-success">

                              Edit
                            </a>

                        </apan>
           
                        <a href="@Url.Action("Delete",new { id=@item.Id})" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">

                          Delete
                        </a>

                        <a href="@Url.Action("Index","SelectedListItems",new { id=@item.Id})" class="btn btn-warning" asp-controller="SelectedListItems" asp-action="Index" asp-route-id="@item.Id">

                            Values
                        </a>

                    </td>

                </tr>


            }

        </tbody>
        <apan type="button" class="collapsible" style="width : 100% !important ">

            <div class="col-12 col-md-3 text-center" style="margin:20px !important">
                <a href="@Url.Action("create")" class="f-n-hover btn btn-success btn-raised px-4 py-25 w-75 text-600">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Add New List
                </a>


            </div>

        </apan>
       
    </table>
</div>