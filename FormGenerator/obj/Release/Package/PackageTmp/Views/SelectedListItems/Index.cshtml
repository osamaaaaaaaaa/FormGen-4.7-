@model IEnumerable<FormGenerator.Models.SelectedListItem>

@{
    ViewBag.Title = "Index";
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectList.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:15% !important">
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td style="width:25% !important">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:25% !important">
                @Html.DisplayFor(modelItem => item.SelectList.Name)
            </td>
            <td style="width:25% !important">
                @*    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.id })*@



                <a href="@Url.Action("Delete",  new { id = item.id })" class="btn btn-danger" asp-action="Delete" ">

                    Delete
                </a>

                <a href="@Url.Action("Edit",  new { id = item.id })" class="btn btn-success" asp-controller="SelectedListItems" asp-action="Index" ">

                    Edit
                </a>
            </td>
        </tr>
    }
    <apan type="button" class="collapsible" style="width : 100% !important ">

        <div class="col-12 col-md-3 text-center" style="margin:20px !important">
            <a href="@Url.Action("Create", new { id = @ViewData["ListId"] })" class="f-n-hover btn btn-success btn-raised px-4 py-25 w-75 text-600">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add New Value
            </a>


        </div>

    </apan>
</table>
